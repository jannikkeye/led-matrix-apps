{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    },
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6", "DOM"],
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "include": ["src/**/*"]
}
